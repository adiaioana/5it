{
  "dockerComposeFile": "./docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace",
  "remoteEnv": {
    "HOST_PROJECT_PATH": "${localWorkspaceFolder}"
  },
  "settings": {
    "css.validate": false,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[go]": {
      "editor.insertSpaces": false,
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      },
      "editor.defaultFormatter": "golang.go"
    },
    "[svelte]": {
      "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "go.lintTool": "golangci-lint",
    "go.lintFlags": ["--fast", "--enable-all", "--new"],
    "go.useLanguageServer": true,
    "gopls": {
      "build.buildFlags": ["-tags=dev"]
    },
    "terminal.integrated.shell.linux": "/bin/bash",
    "svelte.plugin.css.enable": false,
    "tailwindCSS.rootFontSize": 18,
    "eslint.validate": ["typescript", "svelte"],
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "node_modules": true,
      ".pnpm-store": true,
      "web/tsconfig.json": true,
      "web/vite.config.ts": true,
      "web/routify.config.cjs": true,
      "web/br.cjs": true,
      "web/.prettierrc": true,
      "web/.prettierignore": true,
      "web/.eslintrc.cjs": true,
      "web/**/pnpm-lock.yaml": true,
      "web/.routify": true,
      "web/dist": true,
      "web/node_modules": true,
      "tmp": true,
      "go.sum": true,
      "vendor": true,
      ".air.toml": true,
      "**/.gitignore": true,
      ".golangci.yml": true,
      "netlify.toml": true,
      ".netlify": true,
      ".devcontainer": true
    }
  },
  "extensions": [
    // Collaboration
    "ms-vsliveshare.vsliveshare",
    // Debugging
    "msjsdiag.debugger-for-chrome",
    // Helpers
    "gruntfuggly.todo-tree",
    "meganrogge.template-string-converter",
    "technosophos.vscode-make",
    // Language plugins
    "bradlc.vscode-tailwindcss",
    "bungcip.better-toml",
    "davidanson.vscode-markdownlint",
    "golang.go",
    "redhat.vscode-yaml",
    "svelte.svelte-vscode",
    "graphql.vscode-graphql",
    "visualstudioexptteam.vscodeintellicode",
    // Linters & formatters
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "stylelint.vscode-stylelint",
    // Tools
    "ms-azuretools.vscode-docker",
    "mtxr.sqltools",
    "shd101wyy.markdown-preview-enhanced"
  ]
}
